<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xmut.hotel.mapper.RoomMapper">
  <resultMap id="BaseResultMap" type="com.xmut.hotel.entity.Room">
    <result column="room_id" jdbcType="VARCHAR" property="roomId" />
    <result column="room_name" jdbcType="VARCHAR" property="roomName" />
    <result column="room_price" jdbcType="INTEGER" property="roomPrice" />
    <result column="room_exit" jdbcType="TINYINT" property="roomExit" />
  </resultMap>
  <insert id="insert" parameterType="com.xmut.hotel.entity.Room">
    insert into t_room (room_id, room_name, room_price, 
      room_exit)
    values (#{roomId,jdbcType=VARCHAR}, #{roomName,jdbcType=VARCHAR}, #{roomPrice,jdbcType=INTEGER}, 
      #{roomExit,jdbcType=TINYINT})
  </insert>
  <insert id="insertSelective" parameterType="com.xmut.hotel.entity.Room">
    insert into t_room
    <trim prefix="(" suffix=")" suffixOverrides=",">
      <if test="roomId != null">
        room_id,
      </if>
      <if test="roomName != null">
        room_name,
      </if>
      <if test="roomPrice != null">
        room_price,
      </if>
      <if test="roomExit != null">
        room_exit,
      </if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides=",">
      <if test="roomId != null">
        #{roomId,jdbcType=VARCHAR},
      </if>
      <if test="roomName != null">
        #{roomName,jdbcType=VARCHAR},
      </if>
      <if test="roomPrice != null">
        #{roomPrice,jdbcType=INTEGER},
      </if>
      <if test="roomExit != null">
        #{roomExit,jdbcType=TINYINT},
      </if>
    </trim>
  </insert>
  
  <!--查询所有房间-->
  <select id="getAllRoom" resultMap="BaseResultMap">
    select * from t_room
  </select>
</mapper>