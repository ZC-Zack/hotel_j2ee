  </insert>
  <insert id="insertSelective" parameterType="com.xmut.hotel.entity.Apply">
    insert into t_apply
    <trim prefix="(" suffix=")" suffixOverrides=",">
      <if test="applyId != null">
        apply_id,
      </if>
      <if test="name != null">
        name,
      </if>
